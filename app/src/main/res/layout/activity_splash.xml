<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/im3"

    tools:context=".Activities.Splash">

    <ImageView
        android:id="@+id/iv_logo_splash"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:src="@drawable/baseline_webhook_24"
        />

    <TextView
        android:id="@+id/tv_logo_splash"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center
"
        android:text="Signup App"
        android:textColor="@color/blue"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_logo_splash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SparkSupport"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/blue"
        android:textSize="20dp" />


</LinearLayout>